<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESPAÇO CULTURAL UNIFOR"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/adiciona_obra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADICIONAR OBRA"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:background="@drawable/adicionaobra"
        android:textColor="@android:color/white"
        android:layout_below="@id/tv_header"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_recent_works"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OBRAS MAIS RECENTES"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/adiciona_obra"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_recent_works">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Recent Work Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/iv_recent_1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/centelhasemmovimento"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/tv_recent_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exposição Centelhas em Movimento - Coleção Igor Queiroz Barroso"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_recent_description_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paulo Miyada e Tiago Gualberto são os curadores da exposição “Centelhas em Movimento”, com obras da Coleção Igor Queiroz Barroso. A mostra chega a Fortaleza a partir do dia 12 de março, no Espaço Cultural Unifor."
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <Button
                            android:id="@+id/btn_learn_more_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SAIBA MAIS"
                            android:textAllCaps="true"/>

                        <ImageButton
                            android:id="@+id/btn_favorite_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/btn_star"
                            android:background="?android:attr/selectableItemBackgroundBorderless"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Second Recent Work Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/iv_recent_2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/projetotragetorias"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/tv_recent_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exposições Claudio Cesar e Totonho Laprovitera"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_recent_description_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Serão lançadas, no dia 12 de março, as exposições “Fabricando Estantes Todos os Dias”, de Claudio Cesar, e “Colecionando Afetos”, de Totonho Laprovitera. As mostras levam a chancela do projeto Trajetórias Artísticas Unifor, que apresenta exposições de artistas cearenses nas galerias internas do Espaço Cultural Unifor."
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <Button
                            android:id="@+id/btn_learn_more_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SAIBA MAIS"
                            android:textAllCaps="true"/>

                        <ImageButton
                            android:id="@+id/btn_favorite_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/btn_star"
                            android:background="?android:attr/selectableItemBackgroundBorderless"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Third Recent Work Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/iv_recent_3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/tardecomarte"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/tv_recent_title_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TARDE COM ARTE"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_recent_description_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O Grupo Mirante de Teatro da Unifor realiza apresentações teatrais gratuitas para crianças no Espaço Cultural Unifor."
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <Button
                            android:id="@+id/btn_learn_more_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SAIBA MAIS"
                            android:textAllCaps="true"/>

                        <ImageButton
                            android:id="@+id/btn_favorite_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/btn_star"
                            android:background="?android:attr/selectableItemBackgroundBorderless"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Fourth Recent Work Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/iv_recent_4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/mostrasanteriores"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/tv_recent_title_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MOSTRAS ANTERIORES"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_recent_description_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O Espaço Cultural Unifor é uma referência em grandes mostras de arte e de exposições de caráter inédito."
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <Button
                            android:id="@+id/btn_learn_more_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SAIBA MAIS"
                            android:textAllCaps="true"/>

                        <ImageButton
                            android:id="@+id/btn_favorite_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/btn_star"
                            android:background="?android:attr/selectableItemBackgroundBorderless"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Fifth Recent Work Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/iv_recent_5"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/confiratambem"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/tv_recent_title_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONFIRA TAMBÉM"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_recent_description_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tudo sobre as exposições, mostras e eventos realizados no Espaço Cultural Unifor."
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <Button
                            android:id="@+id/btn_learn_more_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SAIBA MAIS"
                            android:textAllCaps="true"/>

                        <ImageButton
                            android:id="@+id/btn_favorite_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/btn_star"
                            android:background="?android:attr/selectableItemBackgroundBorderless"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
