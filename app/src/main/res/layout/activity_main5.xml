<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Espaço Cultural Unifor Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_unifor" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESPAÇO CULTURAL UNIFOR"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Obras Mais Recentes Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OBRAS MAIS RECENTES"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Container for dynamically added works -->
        <LinearLayout
            android:id="@+id/recent_works_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"/>

        <!-- Exposição Centelhas em Movimento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/iv_recent_1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/centelhasemmovimento"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exposição Centelhas em Movimento - Coleção Igor Queiroz Barroso"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <Button
                    android:id="@+id/saibamais_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAIBA MAIS" />
                <Button
                    android:id="@+id/favoritos_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAVORITOS"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Exposições Claudio Cesar e Totonho Laprovitera -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/iv_recent_2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/projetotragetorias" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exposições Claudio Cesar e Totonho Laprovitera"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <Button
                    android:id="@+id/saibamais_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAIBA MAIS" />
                <Button
                    android:id="@+id/favoritos_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAVORITOS"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Exposição Pau de Arara na Biblioteca da Unifor -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/iv_recent_3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/exposicaopaudearara" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exposição Pau de Arara na Biblioteca da Unifor"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <Button
                    android:id="@+id/saibamais_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAIBA MAIS" />
                <Button
                    android:id="@+id/favoritos_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAVORITOS"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Exposição Abaporu: Redescobrindo um Ícone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/iv_recent_4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/abaporu" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exposição Abaporu: Redescobrindo um Ícone"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <Button
                    android:id="@+id/saibamais_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAIBA MAIS" />
                <Button
                    android:id="@+id/favoritos_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAVORITOS"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tarde com Arte -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/iv_recent_5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/tardecomarte" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TARDE COM ARTE"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O Grupo Mirante de Teatro da Unifor realiza apresentações teatrais gratuitas para crianças no Espaço Cultural Unifor."
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <Button
                    android:id="@+id/saibamais_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAIBA MAIS" />
                <Button
                    android:id="@+id/favoritos_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAVORITOS"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Mostras Anteriores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/iv_recent_6"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/mostrasanteriores" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MOSTRAS ANTERIORES"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O Espaço Cultural Unifor é uma referência em grandes mostras de arte e de exposições de caráter histórico."
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <Button
                    android:id="@+id/saibamais_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAIBA MAIS" />
                <Button
                    android:id="@+id/favoritos_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAVORITOS"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Confira também -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/iv_recent_7"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/confiratambem" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONFIRA TAMBÉM"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tudo sobre as exposições, obras de arte, atividades e eventos realizados no Espaço Cultural Unifor."
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <Button
                    android:id="@+id/saibamais_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAIBA MAIS" />
                <Button
                    android:id="@+id/favoritos_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAVORITOS"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>